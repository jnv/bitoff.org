<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    {% if syntaxHighlighting -%}
      <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
      <link rel="stylesheet" href="{{ '/css/prism-diff.css' | url }}">
    {%- endif %}
    {% set absoluteUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset -%} <link rel="canonical" href="{{ canonical or absoluteUrl }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }} RSS feed">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/feed+json" title="{{ metadata.title }} JSON feed">
  </head>
  <body {% if templateClass -%} class="{{ templateClass }}" {%- endif %}>
    <main>
      {{ content | safe }}
    </main>
    <footer
      class="site-footer">
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ -#}
      <nav class="site-nav">
        {%- for entry in collections.all | eleventyNavigation %}
          {% if entry.url != page.url %}
            <a href="{{ entry.url | url }}">{{ entry.title }}</a>
          {% elif entry.url === "/" %}
          {% else %}
            <strong>{{ entry.title }}</strong>
          {% endif %}
        {%- endfor %}
      </nav>
    </footer>
    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
