---
layout: layouts/home.njk
eleventyNavigation:
  key: "bit off"
  order: 1
---

{%- from "macros.njk" import postDate -%}
<p class="home-intro">
  <strong>bit off</strong>
  is an occassional weblog written by
  <a href="{{ metadata.author.url }}" rel="author">{{ metadata.author.name }}</a>.
</p>

{% for post in collections.posts | reverse %}
  <article class="postlist-item h-entry">
    <header>
      <h2 class="p-name">
        <a href="{{ post.url | url }}" class="u-url u-uid">
          {% if post.data.title -%}
            {{ post.data.title }}
          {%- else -%}
            <code>{{ post.url }}</code>
          {%- endif %}
        </a>
      </h2>
      {{ postDate(post) }}
    </header>
    {% if post.data.description -%}
      <p class="p-summary postlist-description">{{ post.data.description }}</p>
    {%- endif %}
  </article>
{% endfor %}
